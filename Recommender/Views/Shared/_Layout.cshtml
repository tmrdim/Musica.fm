<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <label onclick="location.href='@Url.Action("Index", "Home")'" 
                       style="color: #339999; font-size: 18px; margin-top: 13px">
                Musica.fm</label>
                    
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                    <li>@Html.ActionLink("My Collections", "Index", "UserCollection")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    @if(!HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().Equals("Account"))
    {
        if(!HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().Equals("Manage"))
        {
            @RenderBody()
            <div class="container body-content">
                <hr />
                <footer>
                    <p style="color: #339999;">&copy; @DateTime.Now.Year - Musica.fm - Project Management in ICT.</p>
                </footer>
            </div>
        }
        else
        {
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p style="color: #339999;">&copy; @DateTime.Now.Year - Musica.fm - Project Management in ICT.</p>
                </footer>
            </div>
        }
    }
    else
    {
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="color: #339999;">&copy; @DateTime.Now.Year - Musica.fm - Project Management in ICT.</p>
            </footer>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
